# ============================================
# 4You Broadband - Environment Configuration
# ============================================

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite:///./isp_management.db

# For Production (PostgreSQL):
# DATABASE_URL=postgresql://user:password@localhost:5432/isp_db

# ============================================
# SECURITY - CHANGE THESE IMMEDIATELY!
# ============================================
# Generate: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_32_CHAR_HEX_STRING

# Admin Credentials
ADMIN_EMAIL=admin@4you.in
ADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# JWT Token Settings
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_ENABLED=true

# Gmail Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=4You Broadband <noreply@4you.in>

# SendGrid (Production Alternative)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# ============================================
# WHATSAPP CONFIGURATION (OPTIONAL)
# ============================================
WHATSAPP_ENABLED=false

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_TOKEN=your_access_token

# Twilio WhatsApp (Easier Alternative)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ============================================
# FRONTEND URLS (CORS)
# ============================================
FRONTEND_ADMIN_URL=http://localhost:5173
FRONTEND_CUSTOMER_URL=http://localhost:5174
FRONTEND_ENGINEER_URL=http://localhost:5175

# Production URLs (update when deploying)
# FRONTEND_ADMIN_URL=https://admin.4you.in
# FRONTEND_CUSTOMER_URL=https://customer.4you.in
# FRONTEND_ENGINEER_URL=https://engineer.4you.in

# ============================================
# FILE UPLOAD LIMITS (bytes)
# ============================================
MAX_PHOTO_SIZE=5242880        # 5MB
MAX_DOCUMENT_SIZE=10485760    # 10MB

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true

# ============================================
# COMPANY INFORMATION
# ============================================
COMPANY_NAME=4You Broadband
COMPANY_EMAIL=support@4you.in
COMPANY_PHONE=1800-4YOU-NET
COMPANY_ADDRESS=Mumbai, Maharashtra, India